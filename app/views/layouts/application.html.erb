<!DOCTYPE html>
<html>
  <head>
    <%= render 'layouts/head' %>
  </head>
  <body>
  <div class="app-container app-theme-white<%= ' fixed-sidebar' if current_user.fixed_sidebar %><%= ' fixed-header' if current_user.fixed_header %><%= current_user.tab_line ? ' body-tabs-line' : ' body-tabs-shadow' %>">
    <%= render 'layouts/header'  %>
    <div class="app-main">
      <%= render 'layouts/left-menu'  %>
      <div class="app-main__outer">
        <%= render 'layouts/loading_screen'  %>
        <%= yield %>
      </div>
    </div>
    <%= render 'modals' rescue nil %>
  </div>
    <%= render 'layouts/flash' %>
    <%= render 'layouts/body_js' %>
  </body>
</html>
