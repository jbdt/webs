            <a href="<%= users_path %>"<%= menu_active('users') %>>
              <i class="metismenu-icon pe-7s-users"></i>
              Usuarios
            </a>
          </li>
        <% end %>
        <% if authorized_role(%w(admin integrator)) %>
          <li class="app-sidebar__heading">Información</li>
          <li>
            <a href="index.html">
              <i class="metismenu-icon pe-7s-graph"></i>
              Estadísticas
            </a>
          </li>
        <% end %>
        <% if authorized_role(%w(admin integrator)) %>
          <li class="app-sidebar__heading">Páginas Web</li>
          <li>
            <a href="tables-regular.html">
              <i class="metismenu-icon pe-7s-note2"></i>
              Plantillas
            </a>
          </li>
          <li>
            <a href="tables-regular.html">
              <i class="metismenu-icon pe-7s-note"></i>
              Integraciones
            </a>
          </li>
          <li>
            <a href="tables-regular.html">
              <i class="metismenu-icon pe-7s-global"></i>
              Publicadas
            </a>
          </li>
        <% end %>
        <% if authorized_role(%w(admin integrator client)) %>
          <li class="app-sidebar__heading">Personal</li>
          <li>
            <a href="index.html">
              <i class="metismenu-icon pe-7s-user"></i>
              Perfil
            </a>
          </li>
          <li>
            <a href="<%= styles_path %>"<%= menu_active('styles') %>">
              <i class="metismenu-icon pe-7s-paint"></i>
              Estilos
            </a>
          </li>
          <li>
            <a href="index.html">
              <i class="metismenu-icon pe-7s-comment"></i>
              Notificaciones
            </a>
          </li>
          <li>
            <%= link_to destroy_user_session_path do %>
              <i class="metismenu-icon pe-7s-power"></i>
              Cerrar sesión
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

