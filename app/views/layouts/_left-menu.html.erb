<div class="app-sidebar sidebar-shadow <%= current_user.sidebar_color %>">
  <div class="app-header__logo">
    <div class="logo-src"></div>
    <div class="header__pane ml-auto">
      <div>
        <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
        <span class="hamburger-box">
          <span class="hamburger-inner"></span>
        </span>
        </button>
      </div>
    </div>
  </div>
  <div class="app-header__mobile-menu">
    <div>
      <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
        <span class="hamburger-box">
          <span class="hamburger-inner"></span>
        </span>
      </button>
    </div>
  </div>
  <div class="app-header__menu">
    <span>
      <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
        <span class="btn-icon-wrapper">
          <i class="fa fa-ellipsis-v fa-w-6"></i>
        </span>
      </button>
    </span>
  </div>
  <div class="scrollbar-sidebar">
    <div class="app-sidebar__inner">
      <ul class="vertical-nav-menu">
        <% if authorized_role(%w(admin)) %>
          <li class="app-sidebar__heading">Administración</li>
          <li>
            <a href="<%= users_path %>"<%= menu_active('users') %>>
              <i class="metismenu-icon pe-7s-users"></i>
              Usuarios
            </a>
          </li>
        <% end %>
        <% if authorized_role(%w(admin integrator)) %>
          <li class="app-sidebar__heading">Información</li>
          <li>
            <a href="<%= root_path %>"<%= menu_active('main') %>>
              <i class="metismenu-icon pe-7s-graph"></i>
              Estadísticas
            </a>
          </li>
        <% end %>
        <% if authorized_role(%w(admin integrator)) %>
          <li class="app-sidebar__heading">Páginas Web</li>
          <li>
            <a disabled onclick="toastr['warning']('En construcción...');">
              <i class="metismenu-icon pe-7s-note2"></i>
              Plantillas
            </a>
          </li>
          <li>
            <a disabled onclick="toastr['warning']('En construcción...');">
              <i class="metismenu-icon pe-7s-note"></i>
              Integraciones
            </a>
          </li>
          <li>
            <a disabled onclick="toastr['warning']('En construcción...');">
              <i class="metismenu-icon pe-7s-global"></i>
              Publicadas
            </a>
          </li>
        <% end %>
        <% if authorized_role(%w(admin integrator client)) %>
          <li class="app-sidebar__heading">Personal</li>
          <li>
            <a disabled onclick="toastr['warning']('En construcción...');">
              <i class="metismenu-icon pe-7s-user"></i>
              Perfil
            </a>
          </li>
          <li>
            <a href="<%= styles_path %>"<%= menu_active('styles') %>">
              <i class="metismenu-icon pe-7s-paint"></i>
              Estilos
            </a>
          </li>
          <li>
            <%= link_to destroy_user_session_path do %>
              <i class="metismenu-icon pe-7s-power"></i>
              Cerrar sesión
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
