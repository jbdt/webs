<div id="app">
  <div class="app-container app-theme-white">
    <div>
      <div class="h-100 bg-plum-plate bg-animation">
        <div class="d-flex h-100 justify-content-center align-items-center">
          <div class="mx-auto app-login-box col-md-8">
            <div class="app-logo_sign-in mx-auto mb-3"></div>
            <div class="modal-dialog w-100 mx-auto">
              <div class="modal-content">
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <div class="modal-body">
                    <div class="h5 modal-title text-center">
                      <h4 class="mt-2">
                        <h5>Bienvenido de nuevo,</h5>
                        <h6>Por favor, inicia sesión en tu cuenta para continuar.</h6>
                      </h4>
                    </div>
                    <div class="divider"></div>
                    <div id="exampleInputGroup1" role="group" class="form-group">
                      <!---->
                      <div>
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Introduce email...", required: true, class:"form-control" %>
                        <small tabindex="-1" id="exampleInputGroup1__BV_description_" class="form-text text-muted">Recuerda no compartir tus credenciales con nadie.</small>
                      </div>
                    </div>
                    <div id="exampleInputGroup2" role="group" class="form-group">
                      <!---->
                      <div>
                        <%= f.password_field :password, autocomplete: "current-password", placeholder:"Introduce contraseña...", required: true, class:"form-control" %>
                      </div>
                    </div>
                    <div class="custom-control custom-checkbox">
                      <input id="remember_me" type="checkbox" name="remember_me" autocomplete="off" class="custom-control-input" value="true">
                      <label for="remember_me" class="custom-control-label">Recordarme</label>
                    </div>
                  </div>
                  <div class="modal-footer clearfix">
                    <div class="float-right">
                      <%= f.submit "Acceder", class: "btn btn-primary btn-lg" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
            <div class="text-center text-white opacity-8 mt-3">
              Copyright © Blablabla 2020
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>