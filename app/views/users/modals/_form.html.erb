<script>
    function reloadModal(userId) {
        $('#modal-body').hide();
        $('#modal-p').text("")
        $.ajax({
            url: "<%= users_get_user_path %>",
            type: 'POST',
            data: { id: userId},
            success: function(result_ajax){
                $('#form-modal-title').text('Editar Usuario');
                $('#modal-body').show();
                $('#name').val(result_ajax['user']['name']);
                $('#surnames').val(result_ajax['user']['surnames']);
                $('#phone').val(result_ajax['user']['phone']);
                $('#email').val(result_ajax['user']['email']);
                $('#role').val(result_ajax['user']['role']);
            }
        });
    }
</script>
<div id="form-modal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="form-modal-title">Usuario</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <form class="">
        <div id="modal-body" class="modal-body">
          <div class="card-body">
            <div class="position-relative form-group"><label for="name" class="">Nombre</label><input name="name" id="name" placeholder="Laura Fernanda" type="text" class="form-control"></div>
            <div class="position-relative form-group"><label for="surnames" class="">Apellidos</label><input name="surnames" id="surnames" placeholder="Castro de la Cruz" type="text" class="form-control"></div>
            <div class="position-relative form-group"><label for="phone" class="">Teléfono</label><input name="phone" id="phone" placeholder="+34 654 98 73 21" type="tel" class="form-control"></div>
            <div class="position-relative form-group"><label for="email" class="">Email</label><input name="email" id="email" placeholder="laura_fernanda@email.com" type="email" class="form-control"></div>
            <div class="position-relative form-group"><label for="password" class="">Contraseña</label><input name="password" id="examplePassword" placeholder="password placeholder" type="password" class="form-control"></div>
            <div class="position-relative form-group"><label for="role" class="">Rol</label>
              <select name="role" id="role" class="form-control">
                <option value="admin">Administrador</option>
                <option value="integrator">Integrador</option>
                <option value="client">Cliente</option>
              </select>
            </div>
            <div class="position-relative form-group"><label for="avatar" class="">Avatar</label><input name="avatar" id="avatar" type="file" class="form-control-file">
              <small class="form-text text-muted">Foto de perfil del usuario. Dimensiones recomendadas 100x100.</small>
            </div>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
          <button type="button" class="btn btn-primary">Guardar</button>
        </div>
      </form>
    </div>
  </div>
</div>