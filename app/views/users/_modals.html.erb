<script>
    function reloadModal(userId) {
        $('#modal-body').hide();
        $('#modal-p').text("")
        $.ajax({
            url: "<%= users_get_user_path %>",
            type: 'POST',
            data: { id: userId},
            success: function(result_ajax){
                $('#modal-body').show();
                $('#modal-p').text(result_ajax['user']['id']);
                console.log(result_ajax['user']['id']);
            }
        });
    }
</script>
